builddir = build
buildthirdpartydir = build-third-party
cc = gcc
ar = ar
cflags = -funsigned-char -g -Wall -Werror -std=gnu11 -Wextra -Wno-deprecated -Wno-unused-parameter -m64 -D_REENTRANT -DREENTRANT -pthread -Isrc -I${buildthirdpartydir}/include
ldflags = -pthread

rule cc
    command = $cc -MMD -MT $out -MF $out.d $cflags -c $in -o $out
    # command = $cc -MMD -MF $out.d $cflags -c $in -o $out
    depfile = $out.d

rule ar
    command = rm -f $out && $ar crs $out $in

rule link
    command = $cc $ldflags $in -o $out -lrt -ldl

rule build-openssl
    command = third-party/openssl/build-openssl.sh $in


# unittest library
build $builddir/src/unittest/unittest-main.o: cc src/unittest/unittest-main.c
build $builddir/src/unittest/unittest.o:      cc src/unittest/unittest.c
build $builddir/src/unittest/unittest.a:      ar $builddir/src/unittest/unittest-main.o $builddir/src/unittest/unittest.o

# unittest test
build $builddir/src/unittest/unittest-test.o: cc src/unittest/unittest-test.c
build $builddir/src/unittest/unittest-test:   link $builddir/src/unittest/unittest-test.o $builddir/src/unittest/unittest.a

# core library
build $builddir/src/core/memory.o:            cc src/core/memory.c
build $builddir/src/core/core.a:              ar $builddir/src/core/memory.o

# collections library
build $builddir/src/collections/hash-common.o:          cc src/collections/hash-common.c
build $builddir/src/collections/hash-functions.o:       cc src/collections/hash-functions.c
build $builddir/src/collections/hash-set-linear.o:      cc src/collections/hash-set-linear.c
build $builddir/src/collections/hash-map-linear.o:      cc src/collections/hash-map-linear.c
build $builddir/src/collections/murmur-hash3.o:         cc src/collections/murmur-hash3.c
build $builddir/src/collections/fast-array.o:           cc src/collections/fast-array.c
build $builddir/src/collections/dynamic-array.o:        cc src/collections/dynamic-array.c
build $builddir/src/collections/collections.a:          ar $builddir/src/collections/hash-common.o $builddir/src/collections/hash-functions.o $builddir/src/collections/hash-set-linear.o $builddir/src/collections/hash-map-linear.o $builddir/src/collections/murmur-hash3.o $builddir/src/collections/fast-array.o $builddir/src/collections/dynamic-array.o

# collections test
build $builddir/src/collections/hash-set-linear-test.o: cc src/collections/hash-set-linear-test.c
build $builddir/src/collections/hash-set-linear-test:   link $builddir/src/collections/hash-set-linear-test.o $builddir/src/collections/collections.a $builddir/src/utils/utils.a $builddir/src/storage/storage.a $builddir/src/core/core.a $builddir/src/unittest/unittest.a

build $builddir/src/collections/hash-map-linear-test.o: cc src/collections/hash-map-linear-test.c
build $builddir/src/collections/hash-map-linear-test:   link $builddir/src/collections/hash-map-linear-test.o $builddir/src/collections/collections.a $builddir/src/utils/utils.a $builddir/src/storage/storage.a $builddir/src/core/core.a $builddir/src/unittest/unittest.a

build $builddir/src/collections/fast-array-test.o:      cc src/collections/fast-array-test.c
build $builddir/src/collections/fast-array-test:        link $builddir/src/collections/fast-array-test.o $builddir/src/collections/collections.a $builddir/src/core/core.a $builddir/src/unittest/unittest.a

build $builddir/src/collections/dynamic-array-test.o:   cc src/collections/dynamic-array-test.c
build $builddir/src/collections/dynamic-array-test:     link $builddir/src/collections/dynamic-array-test.o $builddir/src/collections/collections.a $builddir/src/utils/utils.a $builddir/src/storage/storage.a $builddir/src/core/core.a $builddir/src/unittest/unittest.a

# storage library
build $builddir/src/storage/static-string.o:            cc src/storage/static-string.c
build $builddir/src/storage/dynamic-string.o:           cc src/storage/dynamic-string.c
build $builddir/src/storage/static-buffer.o:            cc src/storage/static-buffer.c
build $builddir/src/storage/dynamic-buffer.o:           cc src/storage/dynamic-buffer.c
build $builddir/src/storage/storage.a:                  ar $builddir/src/storage/static-string.o $builddir/src/storage/dynamic-string.o $builddir/src/storage/static-buffer.o $builddir/src/storage/dynamic-buffer.o

# storage test
build $builddir/src/storage/static-string-test.o:       cc src/storage/static-string-test.c
build $builddir/src/storage/static-string-test:         link $builddir/src/storage/static-string-test.o $builddir/src/storage/storage.a $builddir/src/collections/collections.a $builddir/src/unittest/unittest.a 
build $builddir/src/storage/static-buffer-test.o:       cc src/storage/static-buffer-test.c
build $builddir/src/storage/static-buffer-test:         link $builddir/src/storage/static-buffer-test.o $builddir/src/storage/storage.a $builddir/src/collections/collections.a $builddir/src/unittest/unittest.a 

# utils library
build $builddir/src/utils/file.o:                       cc src/utils/file.c
build $builddir/src/utils/utils.a:                      ar $builddir/src/utils/file.o

# io library
build $builddir/src/io/edge-loop.o:                     cc src/io/edge-loop.c
build $builddir/src/io/edge-timer.o:                    cc src/io/edge-timer.c
build $builddir/src/io/edge-signal.o:                   cc src/io/edge-signal.c
build $builddir/src/io/edge-async.o:                    cc src/io/edge-async.c
build $builddir/src/io/edge-io.o:                       cc src/io/edge-io.c
build $builddir/src/io/socket-address.o:                cc src/io/socket-address.c
build $builddir/src/io/socket.o:                        cc src/io/socket.c
build $builddir/src/io/socket-io.o:                     cc src/io/socket-io.c
build $builddir/src/io/tcp-client.o:                    cc src/io/tcp-client.c
build $builddir/src/io/tcp-server.o:                    cc src/io/tcp-server.c
build $builddir/src/io/udp-client.o:                    cc src/io/udp-client.c
build $builddir/src/io/udp-server.o:                    cc src/io/udp-server.c
build $builddir/src/io/io.a:                            ar $builddir/src/io/edge-loop.o $builddir/src/io/edge-timer.o $builddir/src/io/edge-signal.o $builddir/src/io/edge-async.o $builddir/src/io/edge-io.o $builddir/src/io/socket-address.o $builddir/src/io/socket.o $builddir/src/io/socket-io.o $builddir/src/io/tcp-client.o $builddir/src/io/tcp-server.o $builddir/src/io/udp-client.o $builddir/src/io/udp-server.o

# io test
build $builddir/src/io/edge-loop-test.o:                cc src/io/edge-loop-test.c
build $builddir/src/io/edge-loop-test:                  link $builddir/src/io/edge-loop-test.o $builddir/src/io/io.a $builddir/src/collections/collections.a $builddir/src/core/core.a $builddir/src/unittest/unittest.a

# tcp test
build $builddir/src/io/tcp-test.o:                       cc src/io/tcp-test.c
build $builddir/src/io/tcp-test:                         link $builddir/src/io/tcp-test.o $builddir/src/io/io.a $builddir/src/collections/collections.a $builddir/src/core/core.a $builddir/src/unittest/unittest.a

# udp test
build $builddir/src/io/udp-test.o:                       cc src/io/udp-test.c
build $builddir/src/io/udp-test:                         link $builddir/src/io/udp-test.o $builddir/src/io/io.a $builddir/src/collections/collections.a $builddir/src/core/core.a $builddir/src/unittest/unittest.a

# openssl library
build $buildthirdpartydir/include/openssl $buildthirdpartydir/lib/openssl: $
                                                         build-openssl third-party/openssl/openssl-1.0.1h.tar.gz
# open-ssl
build $builddir/src/open-ssl/init.o:                     cc src/open-ssl/init.c
build $builddir/src/open-ssl/ssl-context.o:              cc src/open-ssl/ssl-context.c
build $builddir/src/open-ssl/ssl-certificate.o:          cc src/open-ssl/ssl-certificate.c
build $builddir/src/open-ssl/ssl-key.o:                  cc src/open-ssl/ssl-key.c
build $builddir/src/open-ssl/ssl.o:                      cc src/open-ssl/ssl.c
build $builddir/src/open-ssl/ssl-socket-io.o:            cc src/open-ssl/ssl-socket-io.c
build $builddir/src/open-ssl/ssl-client.o:               cc src/open-ssl/ssl-client.c
build $builddir/src/open-ssl/ssl-server.o:               cc src/open-ssl/ssl-server.c
build $builddir/src/open-ssl/openssl.a:                  ar $builddir/src/open-ssl/init.o $builddir/src/open-ssl/ssl-context.o $builddir/src/open-ssl/ssl-certificate.o $builddir/src/open-ssl/ssl-key.o $builddir/src/open-ssl/ssl.o $builddir/src/open-ssl/ssl-socket-io.o $builddir/src/open-ssl/ssl-client.o $builddir/src/open-ssl/ssl-server.o

# ssl test
build $builddir/src/open-ssl/ssl-test.o:                 cc src/open-ssl/ssl-test.c
build $builddir/src/open-ssl/ssl-test:                   link $builddir/src/open-ssl/ssl-test.o $builddir/src/open-ssl/openssl.a $builddir/src/io/io.a $builddir/src/collections/collections.a $builddir/src/utils/utils.a $builddir/src/storage/storage.a $builddir/src/core/core.a $builddir/src/unittest/unittest.a $buildthirdpartydir/lib/openssl/libssl.a $buildthirdpartydir/lib/openssl/libcrypto.a

# command line
build $builddir/src/command-line/command-line.o:         cc src/command-line/command-line.c
build $builddir/src/command-line/command-line.a:         ar $builddir/src/command-line/command-line.o

# command line test
build $builddir/src/command-line/command-line-test.o:    cc src/command-line/command-line-test.c
build $builddir/src/command-line/command-line-test:      link $builddir/src/command-line/command-line-test.o $builddir/src/command-line/command-line.a $builddir/src/collections/collections.a $builddir/src/utils/utils.a $builddir/src/storage/storage.a $builddir/src/core/core.a $builddir/src/unittest/unittest.a
